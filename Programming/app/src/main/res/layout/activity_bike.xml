<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.bike.BikeActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/ic_back"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/name_bike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xe đạp thể thao Fornix FR-303"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/address_bike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bãi cọ Ecopark"
                    android:layout_below="@id/name_bike"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/address_bike"
                    android:layout_alignBaseline="@id/address_bike"
                    android:textColor="@color/dodger_blue"
                    android:text=" (500m)" />

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_toStartOf="@id/rating"
                    android:rating="3.5"
                    android:layout_below="@id/name_bike"
                    android:layout_marginEnd="4dp"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.5 (200)"
                    android:layout_below="@id/name_bike"
                    android:layout_alignParentEnd="true"
                    android:layout_alignBaseline="@id/ratingBar"/>
            </RelativeLayout>
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPagerImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="8dp"
                android:clipToPadding="false" />
            <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
                android:id="@+id/dots_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:dotsColor="@color/dodger_blue"
                app:dotsStrokeColor="@color/gray"
                app:dotsCornerRadius="8dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                app:dotsSize="10dp"
                app:dotsSpacing="4dp"
                app:dotsStrokeWidth="1dp"
                />

            <TextView
                android:background="@drawable/bg_cardview"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:padding="@dimen/activity_horizontal_margin"
                android:layout_height="wrap_content"
                android:text="Giá khởi điểm cho 30 phút đầu là 10.000đ. Cứ mỗi 15 phút tiếp theo, khách sẽ phải trả thêm 3.000đ."/>
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabGravity="fill"
                app:tabIndicatorColor="@color/colorPrimary" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false" />
        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:background="@drawable/bg_bike"
        android:orientation="horizontal"
        android:layout_height="100dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <View
                android:layout_width="2dp"
                android:layout_marginTop="8dp"
                android:layout_height="25dp"
                android:background="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Hoặc"
                android:textStyle="bold"

                android:gravity="center"
                android:textColor="@color/white" />

            <View
                android:layout_width="2dp"
                android:layout_marginBottom="8dp"
                android:layout_height="25dp"
                android:background="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/rent_bike"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Thuê xe"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Liên hệ bãi xe"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>